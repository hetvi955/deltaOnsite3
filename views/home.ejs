      <h1 class="title">Find relations between spotify Artists</h1>
      <div class="form-container">
        <form id="input-form" method="POST" action="/">
          <div class="form-group">
            <label for="eqn">Artist1</label>
            <input id="one" type="text" name="artone" class="inputField" />
          </div>
          <div class="form-group">
            <label for="scale">Artist2</label>
            <input id="two" type="text" name="arttwo" class="inputField" />
          </div>
          <input type="text" name="token" style="display: none;" id="tokenInput" />
          <button id="subbtn" class="btn">Find</button>
        </form>
      </div>
    </div>
  </div>

  <div class="col-8 right-side">
    <div class="heading2">
      <h1 class="title">Relation : <% count>0? count-1:"" %></h1>
    </div>
    <div class="card-area">
      <% relation2.forEach((artist,i)=>{ %>
        <% if(i<relation2.length-1)  { %>
      <div class="bigger-card">
        <div class="artist-card">
          <div class="card-body">
            <img src="<%= artist.images[0].url %>" alt="" class="card-img" />
          </div>
          <h1 class="card-title"><%= artist.name %></h1>
        </div>
        <div class="artist-card indicator">
          <div class="card-body"></div>
          <h1 class="card-title">
            are related via >>
          </h1>
        </div>
        <div class="artist-card">
          <div class="card-body">
            <img src="<%= relation2[i+1].images[0].url %>" alt="" class="card-img" />
          </div>
          <h1 class="card-title"><%= relation2[i+1].name %></h1>
        </div>
      </div>
        <% } %><% }) %>
        <h1 class="error"><%= error %></h1>
    </div>
  </div>

  <style>
    * {
    background:rgb(173, 206, 106);
    padding: 3px;
    margin: 10px;
  }
    .title {
    font-size: 40px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: rgb(39, 39, 39);
   
  }
  
  label {
    font-size: 20px;
    display: block;
    padding: 10px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: rgb(68, 68, 68);
  }
  
  .btn {
  
    font-size: 25px;
    margin-top:30px;
    padding: 20px;
    background: #006b69;
    color: rgb(230, 230, 230);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-weight: 200;
    filter: drop-shadow(0px 0px 4px grey);
  }
  .card1{
    color: rgb(53, 53, 53);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-weight: 200;
    font-size: 30px;

  }
  .card2{
    color: rgb(58, 58, 58);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-weight: 200;
    font-size: 30px;
  }
  .artarea{
    width:100px;
    height:100px;
    padding:30px;

  }
  .artistcard{
    color: rgb(51, 51, 51);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-weight: 200;
    font-size: 30px;

  }
  
  .error {
    margin-top: 40px;
    font-size: 20px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
