<link rel="stylesheet" href="/style.css">

      <div class="heading">
        <h1 class="title">Spotify Artists</h1>
      </div>

        <form action="/" id="input-form" method="POST" >
           <label> Artist One</label>
            <input id="art1" type="text" name="art1" />
            <br>
            <br>
            <label >
              Artist Two 
            </label>
            <input id="art2" type="text" name="art2" />
            <br>
            <br>
          <button class="btn">Find Relation</button>
        </form>
  <br>
  <hr>
  <br>
    
      <h2 class="title">
        Relation : <% count>0? count-1:"" %>
      </h2>
    
    <div class="artarea">
      <% relatn.forEach((artist,i)=>{ %>
        <% if(i <relatn.length-1){ %>
     
        <div class="artistcard">
          <h1 class="title"><%= artist.name %></h1>
        </div>

          <div class="card1"></div>
          <h1 class="title">
             =>
          </h1>
        </div>
        <div class="card2">
          <h1 class="title"><%= relatn[i+1].name %></h1>
        </div>
      
        <% } %>
        <% }) %>
        <h1 class="error">
            <%= error %>
        </h1>
    </div>

